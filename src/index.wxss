view, label, button, text{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  border-radius: 0;
  font-style: normal;
}

.switch {
  height: 48rpx;
  line-height: 48rpx;
  font-size: 32rpx;
  font-style: normal;
  color: #8B8FAE;
  display: flex;
  align-items: center;
}

.switch text {
  font-style: normal;
}

.switch .switch-body {
  width: 80rpx;
  height: inherit;
  border: 6rpx solid #656CE8;
  border-radius: 24rpx;
  background-color: #656CE8;
  margin-left: 10rpx;
  position: relative;
  box-sizing: border-box;
}

.switch .switch-body.close-status {
  background-color: #CDD4FF;
  border-color: #CDD4FF;
}

.switch .switch-body .switch-button {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border-width: 0;
  background-color: #FFFFFF;
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  z-index: 5;
  transition: left .3s;
  box-sizing: border-box;
}
